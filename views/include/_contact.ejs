<section
  class="container mx-auto px-10 md:px-20 lg:px-32 xl:px-40 max-w-full md:max-w-full"
  id="contact"
>
  <div class="flex lg:py-1 lg:px-14 flex-wrap">
    <div class="w-full lg:w-6/12 border-b lg:border-r lg:border-b-0">
      <h1
        class="text-2xl text-slate-700 font-semibold uppercase tracking-wider"
      >
        Contacts
      </h1>
      <p class="text-slate-400 font-semibold tracking-wide mt-2">
        Beberapa cara berbincang dengan saya.
      </p>
      <div class="flex items-start mt-10">
        <img src="/img/contact/mail.svg" alt="" />
        <div class="ml-4">
          <div class="text-sm font-semibold">Mail</div>
          <div class="text-xs lg:text-base xl:text-lg font-semibold">
            haqqisadiedapandega@gmail.com
          </div>
        </div>
      </div>
      <div class="flex items-start mt-10">
        <img src="/img/contact/phone.svg" alt="" />
        <div class="ml-4">
          <div class="text-sm font-semibold">Phone</div>
          <div class="text-xs lg:text-base xl:text-lg font-semibold">
            088898998999
          </div>
        </div>
      </div>
      <div class="flex items-start mt-10 mb-10">
        <img src="/img/contact/instagram.svg" alt="" class="w-[24px]" />
        <div class="ml-4">
          <div class="text-sm font-semibold">Instagram</div>
          <div class="text-xs lg:text-base xl:text-lg font-semibold">
            @aggeegga
          </div>
        </div>
      </div>
    </div>
    <div class="w-full lg:w-6/12 pt-8 lg:pt-0">
      <form action="#" class="lg:py-1 lg:pl-8 xl:py-1 xl:px-14">
        <div class="flex -mx-4 flex-wrap">
          <div class="w-full xl:w-6/12 px-4">
            <label for="nama" class="block mb-1 text-sm font-semibold"
              >Nama</label
            >
            <input
              type="text"
              name="nama"
              id="nama"
              class="bg-transparent border border-slate-300 py-3 px-4 w-full"
            />
          </div>
          <div class="w-full xl:w-6/12 px-4">
            <label for="email" class="block mb-1 text-sm font-semibold"
              >Email</label
            >
            <input
              type="email"
              name="email"
              id="email"
              class="bg-transparent border border-slate-300 py-3 px-4 w-full"
            />
          </div>
        </div>
        <div class="mt-6">
          <label for="subject" class="block mb-1 text-sm font-semibold"
            >Subject</label
          >
          <input
            type="text"
            name="subject"
            id="subject"
            class="bg-transparent border border-slate-300 py-3 px-4 w-full"
          />
        </div>
        <div class="mt-6">
          <label for="message" class="block mb-1 text-sm font-semibold"
            >Message</label
          >
          <textarea
            name="message"
            id="message"
            class="bg-transparent border border-slate-300 h-40 py-3 px-4 w-full"
          ></textarea>
          <div class="text-right">
            <button
              class="bg-violet-600 text-white px-6 py-2 hover:bg-opacity-60 mt-5"
            >
              Send
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
